approve_script_execution() {
  cat "$1"
  printf "\n"

  while true; do
    read -p "Does the above script look safe?" yesno
    case $yesno in
    [Yy]*)
      chmod +x "$1"
      break
      ;;
    [Nn]*)
      exit
      ;;
    *) echo "Answer either yes or no!" ;;
    esac
  done
}

